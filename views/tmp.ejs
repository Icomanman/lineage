<!DOCTYPE html>
<html>

<head>
   <title>ClanGene - Clan Lineage</title>
   <link rel="icon" href="/img/family-tree-icon.png" type="image/icon">
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
   <meta name="description" content="">
   <meta name="author" content="Icomanman">
   <meta name="keywords" content="meta tags, meta description, meta keywords, SEO, search engine optimization">
   <meta http-equiv="x-ua-compatible" content="ie=edge">
   <!-- jQuery -->
   <script src="/js/jquery.min.js" type="text/javascript"></script>
   <!-- Semantic UI -->
   <script src="/js/semantic.min.js" type="text/javascript"></script>
   <link rel="stylesheet" href="/css/semantic.min.css" type="text/css">
   <!-- main -->
   <link rel="stylesheet" href="/css/main.css" type="text/css">
   <% if (locals.is_home) {%>
      <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js" type="text/javascript"></script>
      <script src="https://cdn.jsdelivr.net/npm/d3@4/build/d3.min.js" type="text/javascript"></script>
      <script src="https://cdn.jsdelivr.net/npm/d3-dtree/dist/dTree.min.js" type="text/javascript"></script>
      <link rel="stylesheet" href="/css/app.css" type="text/css">
      <% } %>
</head>

<body>
   <nav class="ui big menu" style="margin: 0 !important;">
      <a href="/">
         <div class="header item">
            <h2 class="ui header">Clan Genealogy</h2>
         </div>
      </a>
      <% if (locals.is_home){ %>
         <section class="right menu">
            <a class="item" id="settings">Settings</a>
            <a class="item" href="/login">Logout</a>
         </section>
         <% } else { %>
            <a class="item" href="/">About</a>
            <section class="right menu">
               <a class="item" href="/login">Login</a>
            </section>
            <% } %>
   </nav>
   <% if (msg_arr) { %>
      <div class="ui centered grid" style="margin-top: 5%;">
         <div class="ui error message">
            <div class="ui list">
               <% msg_arr.forEach(err=>{ %>
                  <div class="item">
                     <%= err.msg %>
                  </div>
                  <% }) %>
            </div>
         </div>
      </div>
      <% } %>
         <%- include(content, { misc: locals.misc ? locals.misc : null }) %>
            <footer class="ui centered grid">
               <div class="row" style="margin-top: 0px !important; margin-bottom: 0px !important;">
                  <div class="ui eight item text menu">
                     <h4 class="ui item">
                        <a class="item" href="/">Terms</a>
                     </h4>
                     <h4 class="ui item">
                        <a class="item" href="/">Privacy</a>
                     </h4>
                     <h4 class="ui item">
                        <a class="item" href="/">Cookies</a>
                     </h4>
                  </div>
               </div>
               <div class="row" style="margin-top: 0px !important; margin-bottom: 0px !important;">
                  <div class="ui horizontal list">
                     <div class="item">Clan Genealogy &copy; 2021</div>
                     <div class="item">|</div>
                     <div class="item">All rights reserved</div>
                  </div>
               </div>
            </footer>
            <% if (content.match('login')) { %>
               <script src="/js/main.js" type="text/javascript"></script>
               <% } %>
</body>

</html>